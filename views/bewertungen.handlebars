<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
  rel="stylesheet"
/>

<h1>{{recipe.titel}}</h1>
<div>
  <a href="/explorer">back</a>
  {{#each reviews}}
    <div>
      <h1>{{nutzername}}</h1>
      <p>{{text}}</p>
      <img />
      {{#range sterne}}
        <img src="/sternentaste-bewerten.png" alt="Star" />
      {{/range}}
      {{#range (diff sterne)}}
        <img src="/construction.gif" alt="Star" />
      {{/range}}
    </div>
  {{/each}}

</div>

<script>
  Handlebars.registerHelper('range', function(n, block) { var accum = '';
  for(var i = 0; i < n; ++i) accum += block.fn(i); return accum; });
</script>